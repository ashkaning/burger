<div class="row">
  <div class="col-md-4 ">
    <h2 class="text-center"><ins>New Burgers</ins></h2>
    <ul class="list-group">
      {{#each burger}}
      {{#unless devoured}}
      {{> burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4 text-center">
    <img class="rounded img-thumbnail" src="assets/img/burger.png">
  </div>
  <div class="col-md-4">
    <h2 class="text-center"><ins>Devoured</ins></h2>
    <ul class="list-group">
      {{#each burger}}
      {{#if devoured}}
      <li class="list-group-item">{{burger_name}}</li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-4">

  </div>
  <div class="col-md-4 text-center">
    <form class="create-form">

      <div class="form-group">
        <label class="col-sm-12 col-form-label" for="ca"><h3><ins>Burger Name: </ins></h3></label>
        <input type="text" id="burger" class="form-control form-control-sm" name="name">
      </div>

      <button type="submit" class="btn btn-lg btn-primary">Create</button>
    </form>
  </div>
  <div class="col-md-4">

  </div>
</div>