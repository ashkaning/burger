<h2>New Burgers</h2>
<ul>
   {{#each burger}}
    {{#unless devoured}}
    {{> burger-block devoured=false}}
 {{/unless}}
  {{/each}}
</ul>
<hr>
<h2>Devoured</h2>
<ul>
   {{#each burger}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
<hr>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Hamburger Name</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label>devoured?</label><br>
  </div>

  <button type="submit">Create</button>
</form>